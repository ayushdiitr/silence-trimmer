{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist/worker",
    "rootDir": "./src",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/worker/**/*",
    "src/server/db/**/*",
    "src/server/storage/**/*",
    "src/server/email/**/*",
    "src/server/queue/**/*",
    "src/env.js"
  ],
  "exclude": [
    "node_modules",
    "src/app/**/*",
    "src/trpc/**/*",
    "src/server/api/**/*",
    "src/server/auth.ts"
  ]
}

